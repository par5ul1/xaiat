section#head
  h1 #{name}
  //- h4 #{address}
  p
    each link, i in links.length ? links : ['']
      a(href=link, target="_blank") #{link}
      if i < links.length - 1
        +textSeparator
  p
    a #{address}
    +textSeparator
    a(href="mailto:" + email, target="_blank") #{email}
    +textSeparator
    a #{phone}
