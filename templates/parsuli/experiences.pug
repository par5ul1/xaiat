mixin experience(exp)
  div
    h3 #{exp.company}
    div.evenly_spaced
      div
        each position in exp.positions.length ? exp.positions : ''
          h4 #{position.title}
      div
          each position in exp.positions.length ? exp.positions : ''
            h4
              em #{position.startDate} - #{position.endDate}
  ul
    each bullet in exp.bullets.length ? exp.bullets : ''
      li !{bullet}

if experiences
  section#experiences
    h2 Work Experience
    +line

    each exp in experiences
      +experience(exp)
